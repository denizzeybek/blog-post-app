# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB (Development)
MONGO_URI=mongodb://localhost:27017/blog-post

# MongoDB Cloud (Production)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Configuration
# CRITICAL: Generate a strong random secret!
# Generate command: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS Configuration
# Add your production frontend URL here
FRONTEND_URL=http://localhost:3001

# AWS S3 Configuration (Optional)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=eu-north-1
# AWS_BUCKET_NAME=your_bucket_name

# Google Maps API (Optional)
# VITE_GOOGLE_MAPS_API_KEY=your_api_key

# Security Notes:
# 1. Never commit .env file to git
# 2. Use different secrets for dev/staging/production
# 3. Rotate JWT_SECRET periodically (every 90 days recommended)
# 4. Keep this file updated when adding new env variables
